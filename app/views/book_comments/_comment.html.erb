<table>
  <% book.book_comments.each do |book_comment| %>
    <tr>
      <td><%= image_tag book_comment.user.get_profile_image, size:"100x100"%></td>
      <td><%= book_comment.user.name %></td>
      <td><%= book_comment.comment %></td>
     <% if book_comment.user == current_user %>
      <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger"%></td>
     <% end %>
    </tr>
  <% end %>
</table>
  <%= form_with model: [book, book_comment], local: false do |f| %>
    <%= f.text_area :comment, rows: '5', cols: '100' %>
    <%= f.submit "送信する" %>
  <% end %>